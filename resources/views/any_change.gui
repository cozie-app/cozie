  </use>

  <text id="text" x="50%" y="21%" class="comfyLabel" font-size="23">activity or clothing over the</text>
  <text id="text" x="50%" y="31%" class="comfyLabel" font-size="23">last 10-min?</text>

  <use href="#left-button" id="change_no" pointer-events="visible">
    <set href="circle" attributeName="fill" to="fb-orange"/>
